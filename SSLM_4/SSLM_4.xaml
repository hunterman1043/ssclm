        <Frame x:Name="frame">
            <Frame.Content>
                <Page>
                    <Border BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource OuterBorderBackgroundDark}" 
                                             Opacity="0.1" />
                        </Border.BorderBrush>
                        <DockPanel>
                            <DockPanel DockPanel.Dock="Top">
                                <views:FilePanelView />
