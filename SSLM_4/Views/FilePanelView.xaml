<UserControl x:Class="HNTR.Views.FilePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:HNTR.ViewModels"
             xmlns:local="clr-namespace:HNTR.Views"
             mc:Ignorable="d" 
             FontFamily="Helvetica LT Std" 
             FontSize="10">
    
    <UserControl.DataContext>
        <viewmodels:FilePanelViewModel />
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <Image x:Key="ExitButton" Source="..\Resources\Images\Delete-512_white.png" />
        <Image x:Key="MainLogo" Source="..\Resources\Images\pEnt_logo_white.png" />
    </UserControl.Resources>
    
    
    
    <Button Command="{Binding DragCommand}" 
            Height="39" 
            VerticalAlignment="Top"
            Background="{x:Null}" 
            BorderBrush="{x:Null}" 
            Foreground="{x:Null}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <DockPanel Background="#FF141417">
                    <Button Command="" 
                            Width="30" 
                            Margin="5" 
                            BorderBrush="{x:Null}"
                            Background="{x:Null}"
                            Foreground="{x:Null}"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Content="{StaticResource MainLogo}" />
                    <Label Foreground="#FFFCFCFF" 
                           VerticalAlignment="Center"
                           FontFamily="Helvetica LT Std Light"
                           FontSize="12" 
                           Content="{Binding Title}" />
                    <Button Command="" 
                            Width="30" 
                            HorizontalAlignment="Right" 
                            Margin="5" 
                            BorderBrush="{x:Null}"
                            Background="{x:Null}"
                            Foreground="{x:Null}"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Content="{StaticResource ExitButton}" />
                </DockPanel>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
