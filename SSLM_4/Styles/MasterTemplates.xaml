<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:HNTR.ViewModels">
    <ControlTemplate TargetType="{x:Type Button}" x:Key="FilePanelTemplate">
        <DockPanel Background="#FF141417">
            <Button Style="{StaticResource MainLogo}">
                <StackPanel>
                    <Image Source="../Resources/pEnt_logo_white.png" />
                </StackPanel>
            </Button>
            <Label Foreground="#FFFCFCFF" 
                   VerticalAlignment="Center"
                   FontSize="12"
                   Content="{Binding Title}" />
            <Button Style="{StaticResource ExitButton}">
                <StackPanel>
                    <Image Source="../Resources/Delete-512_white.png" />
                </StackPanel>
            </Button>
        </DockPanel>
    </ControlTemplate>
</ResourceDictionary>